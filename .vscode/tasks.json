{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Django Development Server",
			"type": "shell",
			"command": ".venv\\Scripts\\activate && cd backend\\django_app && python manage.py runserver 8000",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Flask Notification Service",
			"type": "shell",
			"command": ".venv\\Scripts\\activate && cd backend\\flask_services\\notification_service && python app.py",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Vue Frontend",
			"type": "shell",
			"command": "cd frontend && pnpm dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start All Services",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Start Django Development Server",
				"Start Flask Notification Service",
				"Start Vue Frontend"
			],
			"group": "build",
			"isBackground": true
		}
	]
}